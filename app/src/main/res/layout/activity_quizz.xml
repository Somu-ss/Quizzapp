<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/questionBg"
    tools:context=".QuizzActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:padding="16sp">

       <TextView
           android:id="@+id/question"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10sp"
           android:gravity="center"
           android:text="Which this Flag belongs to?"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:textStyle="normal" />

       <ImageView
           android:id="@+id/imgsrc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5sp"
           android:contentDescription="Indian Image"
           android:src="@drawable/indian_flag" />
       
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_marginTop="12sp">

           <ProgressBar
               android:id="@+id/progress"
               style="?android:attr/progressBarStyleHorizontal"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:indeterminate="false"
               android:max="8"
               android:minHeight="60dp"
               android:progress="0" />

           <TextView
               android:id="@+id/txtProgress"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:padding="20sp"
               android:text="1/8"
               android:textSize="18sp" />

       </LinearLayout>

       <TextView
           android:id="@+id/optionOne"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8sp"
           android:background="@drawable/default_bg_option"
           android:gravity="center"
           android:padding="15sp"
           android:text="India"
           android:textColor="@color/black"
           android:textSize="18dp" />

       <TextView
           android:id="@+id/optionTwo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8sp"
           android:background="@drawable/default_bg_option"
           android:gravity="center"
           android:padding="15sp"
           android:text="India"
           android:textColor="@color/black"
           android:textSize="18dp" />

       <TextView
           android:id="@+id/optionThree"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8sp"
           android:background="@drawable/default_bg_option"
           android:gravity="center"
           android:padding="15sp"
           android:text="India"
           android:textColor="@color/black"
           android:textSize="18dp" />

       <TextView
           android:id="@+id/optionFour"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8sp"
           android:background="@drawable/default_bg_option"
           android:gravity="center"
           android:padding="15sp"
           android:text="India"
           android:textColor="@color/black"
           android:textSize="18dp" />

       <Button
           android:id="@+id/submitBtn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8sp"
           android:shadowRadius="@integer/material_motion_duration_long_1"
           android:text="SUBMIT"
           android:textColor="@color/white"
           android:textSize="16sp"
           android:textStyle="bold" />

   </LinearLayout>


</ScrollView>